<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginLeft="2dp">

    <LinearLayout
        android:id="@+id/feedbackQuestionLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedbackSNoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/feedbackQuestionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:autoText="true"
            android:elegantTextHeight="true"

            android:text="Overall view of the Training Program"
            android:textSize="19sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/feedbackAnswerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedbackQuestionLL"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/feedbackAnswerBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Very Useful"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/feedbackAnswerBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Useful"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/feedbackAnswerBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Useful extent"
            android:background="@drawable/my_button_bg"
            android:textAllCaps="false" />

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/feedbackAnswerLL"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"></View>-->


</RelativeLayout>


</android.support.v7.widget.CardView>