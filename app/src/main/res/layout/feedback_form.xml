<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/feedbackQuestionLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feedbackSNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="19sp"
                android:justificationMode="inter_word"/>

            <TextView
                android:id="@+id/feedbackQuestionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:autoText="true"
                android:elegantTextHeight="true"

                android:text="Overall view of the Training Program"
                android:textSize="19sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feedbackOtherOptionCB"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/feedbackAnswerLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedbackQuestionLL"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/feedbackAnswerBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="Very Useful"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/feedbackAnswerBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="Useful"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/feedbackAnswerBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="Useful extent"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedbackOtherAnswerLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedbackQuestionLL"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/feedbackOtherAnswerEditText"
                android:hint="Give your other feedback"                />

        </LinearLayout>


        <!--<View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/feedbackAnswerLL"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary"></View>-->


    </RelativeLayout>


</android.support.v7.widget.CardView>